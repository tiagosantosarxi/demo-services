<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="vendus_payment_method_view_form" model="ir.ui.view">
        <field name="name">vendus.payment_method.view.form</field>
        <field name="model">vendus.payment.method</field>
        <field name="inherit_id" ref="vendus_account.vendus_payment_method_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='company_id']" position="after">
                <field name="default_payment_journal_id" required="1" domain="[('type', 'in', ['bank', 'cash'])]"/>
            </xpath>
        </field>
    </record>
</odoo>
