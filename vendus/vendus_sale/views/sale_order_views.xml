<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.vendus_sale</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='require_payment']" position="after">
                <field name="vendus_id"/>
            </xpath>
            <xpath expr="//field[@name='client_order_ref']" position="after">
                <field name="reason" readonly="1" attrs="{'invisible': [('reason', '=', False)]}"/>
            </xpath>
            <xpath expr="//header" position="inside">
                <button name="action_post" id="action_confirm" string="Post" class="btn-primary" type="object"
                        attrs="{'invisible': [('state', 'not in', ['draft'])]}"/>
            </xpath>
            <xpath expr="//button[@name='action_confirm'][2]" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//button[@name='action_quotation_send']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//button[@name='action_cancel']" position="attributes">
                <attribute name="attrs">{'invisible': ['|', ('state', 'not in', ['sent','sale']), ('id', '=', False)]}</attribute>
            </xpath>
        </field>
    </record>
</odoo>
