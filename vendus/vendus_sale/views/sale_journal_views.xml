<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_order_journal_view_form" model="ir.ui.view">
        <field name="name">sale.order.journal.view.form.inherit.vendus_sale</field>
        <field name="model">sale.order.journal</field>
        <field name="inherit_id" ref="sale_journals.sale_order_journal_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group" position="after">
                <group>
                    <group name="vendus" string="Vendus">
                        <field name="vendus_register_id"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
