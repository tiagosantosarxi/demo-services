<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="stock_transport_journal_view_form" model="ir.ui.view">
        <field name="name">stock.transport.journal.view.form</field>
        <field name="model">stock.transport.journal</field>
        <field name="arch" type="xml">
            <form>
                <header/>
                <sheet>
                    <field name="active" invisible="1"/>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="movement_type"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                        <group>
                            <field name="vendus_register_id"/>
                        </group>
                    </group>
                </sheet>

            </form>
        </field>
    </record>

    <record id="stock_transport_journal_view_tree" model="ir.ui.view">
        <field name="name">stock.transport.journal.view.tree</field>
        <field name="model">stock.transport.journal</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="movement_type"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </tree>
        </field>
    </record>

    <record id="stock_transport_journal_view_search" model="ir.ui.view">
        <field name="name">stock.transport.journal.view.search</field>
        <field name="model">stock.transport.journal</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="movement_type"/>
                <filter string="Archived" name="inactive" domain="[('active','=',False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Operation Type" name="groupby_movement_type" domain="[]"
                            context="{'group_by': 'movement_type'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="stock_transport_journal_action" model="ir.actions.act_window">
        <field name="name">Transport Journals</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">stock.transport.journal</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="stock_transport_journal_view_search"/>
    </record>

    <menuitem
            id="transport_documents_menu"
            name="Transport Documents"
            parent="stock.menu_stock_config_settings"
            groups="stock.group_stock_manager"
            sequence="15"/>

    <menuitem
            id="transport_journal_menu"
            action="stock_transport_journal_action"
            name="Journals"
            parent="transport_documents_menu"
            groups="stock.group_stock_manager"
            sequence="1"/>
</odoo>
