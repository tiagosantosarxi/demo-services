<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--Form view-->
    <record id="sale_order_journal_view_form" model="ir.ui.view">
        <field name="name">sale.order.journal.view.form</field>
        <field name="model">sale.order.journal</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box"/>
                    <field name="active" invisible="1"/>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger"
                            attrs="{'invisible': [('active', '=', True)]}"/>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" class="oe_inline"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="prefix"/>
                            <field name="sequence_id" required="0" attrs="{'readonly': 1}" groups="base.group_no_one"/>
                            <field name="sequence_number_next"/>
                            <field name="company_id" readonly="1" groups="base.group_no_one"/>
                        </group>
                        <group>
                            <field name="sale_type_id" widget="radio"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!--Tree view-->
    <record id="sale_order_journal_view_trew" model="ir.ui.view">
        <field name="name">sale.order.journal.view.tree</field>
        <field name="model">sale.order.journal</field>
        <field name="arch" type="xml">
            <tree>
                <field name='sequence' widget='handle'/>
                <field name="name"/>
                <field name="prefix"/>
                <field name="sale_type_id"/>
                <field name="sequence_number_next"/>
            </tree>
        </field>
    </record>

    <record id="sale_order_journal_view_search" model="ir.ui.view">
        <field name="name">sale.order.journal.view.search</field>
        <field name="model">sale.order.journal</field>
        <field name="arch" type="xml">
            <search string="Sale Order Journal">
                <field name="name"/>
                <field name="prefix"/>
                <filter string="Archived" name="inactive" domain="[('active','=',False)]"/>
                <group expand="0" string="Group By">
                    <filter name="group_by_sale_type" string="Sale Type" context="{'group_by':'sale_type_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="sale_order_journal_action" model="ir.actions.act_window">
        <field name="name">Sale Journal</field>
        <field name="res_model">sale.order.journal</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="sale_order_journal_view_search"/>
        <field name="view_id" ref="sale_order_journal_view_trew"/>
    </record>
</odoo>
