<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--Form view-->
    <record id="sale_order_type_view_form" model="ir.ui.view">
        <field name="name">sale.order.type.view.form</field>
        <field name="model">sale.order.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box"/>
                    <field name="active" invisible="1"/>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger"
                            attrs="{'invisible': [('active', '=', True)]}"/>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" class="oe_inline"/>
                        </h1>
                    </div>
                    <group col="2">
                        <field name="code"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!--Tree view-->
    <record id="sale_order_type_view_trew" model="ir.ui.view">
        <field name="name">sale.order.type.view.tree</field>
        <field name="model">sale.order.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle"/>
                <field name="code"/>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="sale_order_type_view_search" model="ir.ui.view">
        <field name="name">sale.order.type.view.search</field>
        <field name="model">sale.order.type</field>
        <field name="arch" type="xml">
            <search string="Sale Order Type">
                <field name="code"/>
                <field name="name"/>
                <filter string="Archived" name="inactive" domain="[('active','=',False)]"/>
                <group expand="0" string="Group By">
                        <filter name="group_by_code" string="Code" context="{'group_by':'code'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="sale_order_type_action" model="ir.actions.act_window">
        <field name="name">Sale Document Type</field>
        <field name="res_model">sale.order.type</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="sale_order_type_view_search"/>
        <field name="view_id" ref="sale_order_type_view_trew"/>
    </record>
</odoo>
