<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="vendus_wizard_view_form" model="ir.ui.view">
        <field name="name">vendus.wizard.view.form</field>
        <field name="model">vendus.wizard</field>
        <field name="arch" type="xml">
            <form>
                <field name="state" invisible="1"/>
                <group states="choose">
                    <field name="import_accounts"/>
                    <field name="import_customers"/>
                    <field name="import_employees"/>
                    <field name="import_products"/>
                    <field name="import_uoms"/>
                    <field name="import_brands"/>
                    <field name="import_categories"/>
                    <field name="import_pricegroups"/>
                    <field name="import_payment_methods"/>
                    <field name="import_registers"/>
                </group>
                <group states="get">
                    <field name="result"/>
                </group>
                <footer>
                    <button name="action_sync_base_info" states="choose" string="Sync Info" class="btn btn-primary"
                            type="object"/>
                    <button name="reload" type="object" string="Close" class="btn btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="vendus_wizard_action" model="ir.actions.act_window">
        <field name="name">Vendus Wizard</field>
        <field name="res_model">vendus.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
