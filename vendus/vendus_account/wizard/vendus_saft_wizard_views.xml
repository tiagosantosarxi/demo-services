<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Wizard View To Export SAFT File -->
    <record id="vendus_saft_wizard_view_form" model="ir.ui.view">
        <field name="name">vendus.saft.wizard.view.form</field>
        <field name="model">vendus.saft.wizard</field>
        <field name="arch" type="xml">
            <form>
                <field name="state" invisible="1"/>
                <!--<field name="name" invisible="1"/>-->
                <sheet>
                    <group states="choose">
                        <group>
                            <field name="year"/>
                        </group>
                        <group>
                            <field name="month"/>
                        </group>
                    </group>
                    <group states="get">
                        <field name="filename" invisible="1"/>
                        <field name="data" readonly="1" filename="filename"/>
                    </group>
                </sheet>
                <footer>
                    <button name="execute" string="Export" type="object" states="choose" class="oe_highlight"/>
                    <button string="Close" special="cancel" class="oe_highlight"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="vendus_saft_wizard_action" model="ir.actions.act_window">
        <field name="name">SAFT-PT Export</field>
        <field name="res_model">vendus.saft.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
